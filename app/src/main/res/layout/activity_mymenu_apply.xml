<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBE0FF"
    tools:context=".MymenuApply">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_mymenu_apply"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/jua_regular"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/button_party2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="나의 파티현황"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView_mymenu_apply"
        app:layout_constraintEnd_toStartOf="@+id/button_apply2"
        app:layout_constraintHorizontal_bias="0.204"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/jua_regular"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_apply2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#888888"
        android:text="나의 신청현황"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView_mymenu_apply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toEndOf="@+id/button_party2"
        android:fontFamily="@font/jua_regular"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>